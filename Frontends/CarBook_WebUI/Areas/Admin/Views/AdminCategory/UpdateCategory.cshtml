@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- page content -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Kategori Güncelleme Sayfası</h4>

                        <form method="post">
                            <input type="hidden" asp-for="CategoryId"/>
                            <div class="form-group">
                                <label for="exampleInputName">Kategori Adı</label>
                                <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Kategori adı giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

