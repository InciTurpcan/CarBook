@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- page content -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Referans Bilgisi Güncelleme Syfası </h4>

                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Adı</label>
                                <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Ad Soyad giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referans Unvanı</label>
                                <input type="text" class="form-control" asp-for="Title" id="exampleInputTitle" placeholder="Referans Unvanı giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Görsel</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputImageUrl" placeholder="Referans Görseli giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputComment">Referans Yorum</label>
                                <textarea rows="5" class="form-control" asp-for="Comment" id="exampleInputComment" placeholder="Yorum giriniz"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Güncelle</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

